{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"DATABASE_URL",
				"REDIS_URL",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"INITIAL_ADMIN_EMAILS",
				"SKIP_ENV_VALIDATION",
				"PUSHER_APP_ID",
				"PUSHER_KEY",
				"PUSHER_SECRET",
				"PUSHER_CLUSTER",
				"NEXT_PUBLIC_ADMIN_URL",
				"NEXT_PUBLIC_PUSHER_KEY",
				"NEXT_PUBLIC_PUSHER_CLUSTER",
				"BLOB_READ_WRITE_TOKEN",
				"ALGOLIA_APP_ID",
				"ALGOLIA_SEARCH_KEY",
				"ALGOLIA_ADMIN_KEY",
				"ALGOLIA_INDEX_NAME",
				"INNGEST_EVENT_KEY",
				"INNGEST_SIGNING_KEY",
				"POLAR_ACCESS_TOKEN",
				"CLOUDINARY_CLOUD_NAME",
				"CLOUDINARY_API_KEY",
				"CLOUDINARY_API_SECRET",
				"CLOUDINARY_URL",
				"REOWN_AUTH_SECRET",
				"SENTRY_DSN",
				"SENTRY_AUTH_TOKEN"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		}
	}
}
